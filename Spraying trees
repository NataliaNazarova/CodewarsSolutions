// Spraying trees
// https://www.codewars.com/kata/5981a139f5471fd1b2000071/train/javascript

function task(w, n, c) {
  let name = {
    'Monday': 'James',
    'Tuesday': 'John',
    'Wednesday': 'Robert',
    'Thursday': 'Michael',
    'Friday': 'William'
  }
  
  return `It is ${w} today, ${name[w]}, you have to work, you must spray ${n} trees and you need ${n * c} dollars to buy liquid`;
}
