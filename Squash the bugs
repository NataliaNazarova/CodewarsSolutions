// Squash the bugs
// https://www.codewars.com/kata/56f173a35b91399a05000cb7/train/javascript
function findLongest(str) {
  let arr = str.split(" ");
  let longest = 0;
  for (let i = 0; i < arr.length; i++) {
    if (arr[i].length > longest) {
      longest = arr[i].length;
    }
   }
   return longest;
}
