// Sum of Triangular Numbers
// https://www.codewars.com/kata/580878d5d27b84b64c000b51/train/javascript

function sumTriangularNumbers(n) {
  if (n <= 0) return 0;
  else {
    let s = 0;
    let a = 0;
    for (let i = 1; i <= n; i++){
      a = a + i;
      s = s + a;      
    }
    return s;
  }
}
