// https://www.codewars.com/kata/559011063089b0d5500001aa/train/javascript

function CalculateString( n,  nums) {
  let l1 = nums.length;
  let l2 = 0;
  while (l1 !== l2){
     l1 = nums.length;
     nums = nums.replace(/10|01/g, '');
     l2 = nums.length;
     if(l1 === l2) break;
   }
  return nums.length;
}
